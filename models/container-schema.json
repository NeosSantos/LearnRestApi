{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://example.com/container.json",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "title": "Container ID",
      "minLength": 24,
      "maxLength": 24,
      "description": "货柜编号，由数据库生成。这里使用MongoDb的默认的格式",
      "examples": [
        "5a06d37b7424c62dcc295c91"
      ]
    },
    "eId": {
      "type": "integer",
      "title": "EId",
      "description": "机柜锁控ID",
      "default": 0
    },
    "address": {
      "type": "string",
      "title": "Container address",
      "minLength": 2,
      "maxLength": 40,
      "description": "货柜地址",
      "default": ""
    },
    "coordinate": {
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "title": "Container GPS location",
      "description": "货柜的地理位置（经度，纬度）",
      "items": {
        "type": "number"
      }
    },
    "remark": {
      "type": "string",
      "title": "Remark",
      "description": "备注信息"
    },
    "temperature": {
      "type": "number",
      "title": "Container temperature",
      "min": 12,
      "max": 14,
      "description": "货柜箱温度",
      "default": ""
    },
    "boxes": {
      "type": "array",
      "title": "BoxArray",
      "description": "机柜所有单元格数组集合",
      "items": {
        "type": "object",
        "title": "Box",
        "description": "单元格信息",
        "properties": {
          "boxId": {
            "type": "integer",
            "title": "Box ID",
            "description": "单元格ID"
          },
          "isEmpty": {
            "type": "boolean",
            "title": "Is Empty",
            "description": "当前是否为空",
            "default": true
          },
          "boxSize": {
            "type": "array",
            "maxItems": 3,
            "minItems": 3,
            "title": "Box Size",
            "description": "单元格的长、宽、高",
            "items": {
              "type": "integer"
            },
            "default": [
              [
                30,
                40,
                50
              ]
            ]
          }
        }
      }
    }
  },
  "required": [
    "address",
    "coordinate",
    "temperature",
    "eId"
  ]
}